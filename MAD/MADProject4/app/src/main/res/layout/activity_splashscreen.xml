<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#533A71">

    <!-- Outer Circle -->
    <View
        android:id="@+id/outer_circle"
        android:layout_width="429dp"
        android:layout_height="437dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_shape" />

    <!-- Middle Circle -->
    <View
        android:id="@+id/middle_circle"
        android:layout_width="265dp"
        android:layout_height="264dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_shape" />

    <!-- Inner Circle -->
    <View
        android:id="@+id/inner_circle"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_shape" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/center_logo"
        android:layout_width="73dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/ActiveTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="ActiveTrack"
        android:textColor="#FDF4DC"
        android:textSize="20dp"
        android:textStyle="bold" />

    <!-- Icon 1 (Top Left) -->
    <ImageView
        android:id="@+id/weightingicon"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:rotation="-50"
        android:src="@drawable/weighticon"
        android:translationX="-110dp"
        android:translationY="-100dp" />

    <!-- Icon 2 (Top Right) -->
    <ImageView
        android:id="@+id/armicon"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:rotation="37"
        android:src="@drawable/armicon"
        android:translationX="110dp"
        android:translationY="-100dp" />

    <!-- Icon 3 (Right Middle) -->

    <!-- Icon 4 (Bottom Right) -->

    <!-- Icon 5 (Bottom Left) -->

    <ImageView
        android:id="@+id/dumbellicon"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:rotation="37"
        android:src="@drawable/dumbell"
        android:translationX="80dp"
        android:translationY="0dp" />

    <ImageView
        android:id="@+id/hearticon"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:rotation="132"
        android:src="@drawable/heart"
        android:translationX="20dp"
        android:translationY="130dp" />

    <ImageView
        android:id="@+id/treadmillicon"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:rotation="-141"
        android:src="@drawable/treadmill"
        android:translationX="-110dp"
        android:translationY="100dp" />

    <!-- Icon 6 (Left Middle) -->
    <ImageView
        android:id="@+id/manicon"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:rotation="-46"
        android:src="@drawable/man"
        android:translationX="-20dp"
        android:translationY="110dp" />

</FrameLayout>
